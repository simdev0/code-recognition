<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="line">
        <stroke android:alpha="0.2" android:width="2dp" android:color="@color/colorCross" />
    </shape>
</item>
<item>
    <rotate android:fromDegrees="90" android:pivotX="50%" android:pivotY="50%" android:toDegrees="-90">
        <shape android:shape="line">
            <stroke android:alpha="0.2" android:width="2dp" android:color="@color/colorCross" />
        </shape>
    </rotate>
</item>
</layer-list>